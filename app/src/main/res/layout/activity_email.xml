<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient1"
    android:layout_gravity="center"
    tools:context=".Email">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:src="@drawable/emailmarketing" />
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRMA TU CORREO"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:textColor="#ff3d00"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView"
        android:background="@drawable/inp_rou"
        android:padding="8dp"
        android:textColorHint="#626262"
        />

    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:id="@+id/confirmacion"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:hint="Confirmation"
        android:textSize="22dp"
        android:textColorHint="#fff"
        android:background="@drawable/go_btn"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/nuevoemail"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="New Email"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/confirmacion"
        android:background="@drawable/inp_rou"
        android:padding="8dp"
        android:layout_marginTop="15dp"
        android:textColorHint="#626262"
        />
    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:id="@+id/modificar"
        android:layout_below="@id/nuevoemail"
        android:layout_centerHorizontal="true"
        android:hint="Change"
        android:textSize="22dp"
        android:textColorHint="#fff"
        android:background="@drawable/go_btn"
        android:layout_marginTop="15dp"/>

</RelativeLayout>