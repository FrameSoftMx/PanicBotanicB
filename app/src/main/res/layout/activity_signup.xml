<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/gradient1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGN UP"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"/>

                <EditText
                    android:id="@+id/nombre"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="fullname"
                    android:gravity="center"
                    android:background="@drawable/inp_rou"
                    android:padding="8dp"
                    android:textColorHint="#626262"
                    android:layout_marginTop="10dp"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/contrasena"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="password"
                    android:gravity="center"
                    android:background="@drawable/inp_rou"
                    android:padding="8dp"
                    android:textColorHint="#626262"
                    android:layout_marginTop="15dp"
                    android:inputType="textPassword"/>
                <EditText
                    android:id="@+id/confconstrasena"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="confirm password"
                    android:gravity="center"
                    android:background="@drawable/inp_rou"
                    android:padding="8dp"
                    android:textColorHint="#626262"
                    android:layout_marginTop="15dp"
                    android:inputType="textPassword"/>
                <EditText
                    android:id="@+id/celular"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="cellphone"
                    android:gravity="center"
                    android:background="@drawable/inp_rou"
                    android:padding="8dp"
                    android:textColorHint="#626262"
                    android:layout_marginTop="15dp"
                    android:inputType="phone"/>
                <EditText
                    android:id="@+id/correo"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="email"
                    android:gravity="center"
                    android:background="@drawable/inp_rou"
                    android:padding="8dp"
                    android:textColorHint="#626262"
                    android:layout_marginTop="15dp"
                    android:inputType="textEmailAddress"/>
                <CheckBox
                    android:id="@+id/chkterminos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/correo"
                    android:layout_centerHorizontal="true"
                    android:text="@string/acepto" />

                <TextView
                    android:id="@+id/terminos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/chkterminos"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/terminos" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:id="@+id/regristro"
                    android:hint="Go !"
                    android:textSize="22dp"
                    android:textColorHint="#fff"
                    android:background="@drawable/go_btn"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>



</LinearLayout>